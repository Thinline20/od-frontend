---
import { Image } from "astro:assets";
import Layout from "~/layouts/Layout.astro";
import mainCCTVImage from "~/assets/main-cctv.jpg";
import RoomListItem from "~/components/RoomListItem";
import { createVar, createFilter, createTag } from "~/utils/django";
---

<Layout title="cctv">
  <main class="container mx-auto px-8 py-4 1080p:max-w-screen-2xl 1080p:p-8">
    <div class="mx-auto mb-4 md:mb-6 xl:mb-8">
      <div class="flex gap-4">
        <Image
          src={mainCCTVImage}
          alt="CCTV Image"
          class="aspect-video rounded-lg opacity-90 shadow-md md:max-w-[12rem] md:opacity-100"
          transition:name="main-cctv-image"
        />
        <div class="absolute flex-row gap-2 p-2 md:relative md:flex-col">
          <h2
            class="text-2xl font-bold sm:text-3xl md:text-5xl"
            transition:name="cctv-title"
          >
            CCTV
          </h2>
          <p
            class="text-md sm:text-lg md:text-xl"
            transition:name="cctv-description"
          >
            Get object detected footage from CCTV
          </p>
        </div>
      </div>
    </div>
    <div>
      <ul
        class="grid grid-cols-2 flex-wrap gap-4 md:grid-cols-3 xl:grid-cols-4 1080p:grid-cols-5"
      >
        <RoomListItem room="0" />
        <RoomListItem room="1" />
        <RoomListItem room="2" />
        <RoomListItem room="3" />
        <RoomListItem room="4" />
        <RoomListItem room="5" />
      </ul>
    </div>
  </main>
</Layout>
