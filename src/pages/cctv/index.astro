---
import { Image } from "astro:assets";
import Layout from "~/layouts/Layout.astro";
import mainCCTVImage from "~/assets/main-cctv.jpg";
import RoomListItem from "~/components/RoomListItem.astro";
import { createVar, createFilter, createTag } from "~/uitls/django";
---

<Layout title="cctv">
  <main class="container mx-auto p-4 1080p:p-6">
    <div class="mx-auto mb-4 md:mb-6 1080p:max-w-screen-2xl">
      <div class="flex gap-4">
        <Image
          src={mainCCTVImage}
          alt="CCTV Image"
          class="aspect-video rounded-lg shadow-md md:max-w-[12rem] opacity-90 md:opacity-100"
          transition:name="main-cctv-image"
        />
        <div class="absolute flex-row md:flex-col gap-2 md:relative p-2">
          <h2 class="text-2xl sm:text-3xl md:text-5xl font-bold" transition:name="cctv-title">CCTV</h2>
          <p class="text-md sm:text-lg md:text-xl" transition:name="cctv-description">
            Get object detected footage from CCTV
          </p>
        </div>
      </div>
    </div>
    <div>
      <ul
        class="grid grid-cols-2 flex-wrap gap-4 md:grid-cols-3 xl:grid-cols-4 1080p:grid-cols-5"
      >
        <RoomListItem room={"cctv1"} />
        <RoomListItem room={"cctv2"} />
        <RoomListItem room={"cctv3"} />
        <RoomListItem room={"cctv4"} />
        <RoomListItem room={"cctv5"} />
        <RoomListItem room={"cctv6"} />
      </ul>
    </div>
  </main>
</Layout>
