---
import Layout from "~/layouts/Layout.astro";
import MaterialSymbolsHome from "~/components/icons/MaterialSymbolsHome";
import BiSolidCctv from "~/components/icons/BiSolidCctv";
---

<Layout title="logout">
  <div class="h-full bg-base-200">
    <main class="container mx-auto">
      <div class="flex justify-center">
        <div
          class="mt-8 rounded-xl border border-base-300 bg-white p-4 shadow-sm sm:p-7"
        >
          <form action="" method="post">
            <div>
              <h1 class="text-3xl font-bold tracking-wide">Logout</h1>
              <p class="mt-2 text-base text-gray-600">
                Are you sure you want to logout?
              </p>
              <div class="mt-6 flex flex-col gap-2">
                <a
                  href="/"
                  class="flex cursor-pointer items-center gap-2 text-lg font-bold text-blue-600 decoration-2 hover:underline"
                >
                  <span><MaterialSymbolsHome /></span>Go to Home</a
                >
                <a
                  href="/cctv"
                  class="flex cursor-pointer items-center gap-2 text-lg font-bold text-blue-600 decoration-2 hover:underline"
                >
                  <span><BiSolidCctv /></span>Go to CCTV Select Page</a
                >
              </div>
              <button
                type="submit"
                name="logout"
                value="logout"
                class="btn btn-primary mt-6 w-full"
              >
                Logout
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
</Layout>
