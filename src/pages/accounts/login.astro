---
import Layout from "~/layouts/Layout.astro";
import { createTag } from "~/utils/django";
---

<Layout title="Login" isAdmin={false} loggedIn={false}>
  <div class="h-full bg-base-200">
    <main class="container mx-auto">
      <div class="flex justify-center">
        <div
          class="mt-8 max-w-md rounded-xl border border-base-300 bg-white p-4 shadow-sm sm:p-7"
        >
          <div class="text-center">
            <h1 class="text-2xl font-bold">Sign in</h1>
            <p class="mt-2 text-sm text-neutral/70">
              Don't have an account yet?
              <a
                href="/account/help"
                class="font-medium text-blue-600 decoration-2 hover:underline"
                >Contact with admin</a
              >
            </p>
          </div>
          <div class="mt-7">
            <form method="post">
              <span class="invisible hidden">
                {createTag("csrf_token")}
              </span>
              <div class="form-control">
                <label for="id" class="label text-sm font-medium uppercase"
                  >ID</label
                >
                <input
                  id="id"
                  name="id"
                  type="text"
                  class="input input-bordered"
                />
              </div>
              <div class="form-control mt-4">
                <label
                  for="password"
                  class="label text-sm font-medium uppercase">Password</label
                >
                <input
                  id="password"
                  name="password"
                  type="password"
                  class="input input-bordered"
                />
              </div>
              <div class="mt-6 flex flex-col gap-4">
                <div class="flex items-center gap-1">
                  <input id="remember-me" type="checkbox" class="checkbox" />
                  <label for="remember-me" class="label text-sm font-medium">
                    Remember me
                  </label>
                </div>
                <div class="form-control">
                  <button class="btn btn-primary">Sign in</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
 ~/utils/django
