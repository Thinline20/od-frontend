---
import Layout from "~/layouts/Layout.astro";
import { createTag } from "~/utils/django";
---

<Layout title="signup">
  <div class="h-full bg-base-200">
    <main class="container mx-auto">
      <div class="flex justify-center">
        <div
          class="mt-8 max-w-lg rounded-xl border border-base-300 bg-white p-4 shadow-sm sm:p-7"
        >
          <div class="text-center">
            <h1 class="text-2xl font-bold">Craete Account</h1>
          </div>
          <div class="mt-7">
            <form action="" method="post">
              <span class="invisible hidden">
                {createTag("csrf_token")}
              </span>
              <div class="flex flex-col gap-2">
                <div class="form-control">
                  <label for="name" class="label">
                    <span class="label-text">Name</span>
                  </label>
                  <input type="text" id="name" class="input input-bordered" />
                </div>
                <div class="form-control">
                  <label for="password" class="label">
                    <span class="label-text">Password</span>
                  </label>
                  <input
                    type="password"
                    id="password"
                    class="input input-bordered"
                  />
                </div>
                <div class="form-control">
                  <label for="password-check" class="label">
                    <span class="label-text">Check Password</span>
                  </label>
                  <input
                    type="password"
                    id="password-check"
                    class="input input-bordered"
                  />
                </div>
                <div class="form-control">
                  <label for="email" class="label">
                    <span class="label-text">E-Mail</span>
                  </label>
                  <input type="email" id="email" class="input input-bordered" />
                </div>
              </div>
              <div class="form-control mt-7">
                <button class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
